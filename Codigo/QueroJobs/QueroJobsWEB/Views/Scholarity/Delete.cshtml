@model QueroJobsWEB.Models.ScholarityModel

@{
    ViewData["Title"] = "Deletar escolaridade";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja deletar esse escolaridade?</h3>
<div>
    <h4>Escolaridade</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScholarityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScholarityName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para lista de escolaridades</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }