@using Microsoft.AspNetCore.Identity
@using QueroJobsWEB.Areas.Identity.Data

@inject SignInManager<UsersIdentity> SignInManager
@inject UserManager<UsersIdentity> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">
                <div class="circle">
                    <p>CADASTRE-SE</p>
                </div>
            </a>
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">
                <div class="circle">
                    <p>INICIAR SESSÃO</p>
                </div>
            </a>
    }
</ul>
