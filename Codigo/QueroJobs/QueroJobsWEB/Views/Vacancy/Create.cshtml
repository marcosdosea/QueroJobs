@model QueroJobsWEB.Models.VacancyModel

@{
    ViewData["Title"] = "Criar vaga";
}

<h1>@ViewData["Title"]</h1>

<h4>Vaga</h4>

<hr />

<div class="container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-6 form-group">
                    <label asp-for="VacancyName" class="control-label"></label>
                    <input asp-for="VacancyName" class="form-control py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="VacancyName" class="text-danger"></span>
                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-6 form-group">
                    <label asp-for="OpenDate" class="control-label"></label>
                    <input asp-for="OpenDate" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="OpenDate" class="text-danger"></span>
                </div>
                <div class="col-sm-6 form-group">
                    <label asp-for="CloseDate" class="control-label"></label>
                    <input asp-for="CloseDate" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="CloseDate" class="text-danger"></span>
                </div>

            </div>

            <div class="row">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Modality" class="control-label"></label>
                <select asp-for="Modality" class="form-control  py-2 rounded-pill mr-1 pr-5">
                    <option value="presencial">Presencial</option>
                    <option value="remota">Remota</option>
                    <option value="hibrida">Hibrida</option>
                </select>
                <span asp-validation-for="Modality" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Situation" class="control-label"></label>
                <input asp-for="Situation" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="Situation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Workload" class="control-label"></label>
                <input asp-for="Workload" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="Workload" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control  py-2 rounded-pill mr-1 pr-5" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista de vagas</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
